
{
	// Code actions and default formatter
	"editor.codeActionsOnSave": {
		"source.organizeImports": "explicit"
	},
	"editor.defaultFormatter": "biomejs.biome",

	// GitLens AI configuration
	"gitlens.ai.model": "vscode",
	"gitlens.ai.vscode.model": "copilot:gpt-4.1",

	// Theme and editor appearance
	"workbench.colorTheme": "One Dark Pro Night Flat",
	"editor.formatOnSave": true,
	"editor.cursorBlinking": "phase",
	"editor.cursorSmoothCaretAnimation": "on",

	// Color highlight settings
	"color-highlight.markerType": "dot-after",
	"color-highlight.matchHslWithNoFunction": true,
	"color-highlight.matchRgbWithNoFunction": true,
	"color-highlight.matchWords": true,

	// Explorer settings
	"explorer.confirmDelete": false,

	// JSON schema download trusted domains
	"json.schemaDownload.trustedDomains": {
		"https://schemastore.azurewebsites.net/": true,
		"https://raw.githubusercontent.com/": true,
		"https://www.schemastore.org/": true,
		"https://json.schemastore.org/": true,
		"https://json-schema.org/": true,
		"https://biomejs.dev": true
	},

	// Language-specific formatters (Biome)
	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[json]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[javascriptreact]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"workbench.iconTheme": "vscode-icons"
}
